          // Debug focus
          input.addEventListener('focus', () => {
            console.log(`üéØ Focus en input #${index}:`, {
              id: input.id,
              tag: input.tagName,
              disabled: input.disabled,
              readOnly: input.readOnly,
              tabIndex: input.tabIndex,
            });
          });

          // Debug blur
          input.addEventListener('blur', () => {
            console.log(`üòµ Blur en input #${index}:`, input.id);
          });

