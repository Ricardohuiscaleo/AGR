    document.addEventListener('DOMContentLoaded', () => {
      // Desactivar P5CursorSketch en hola-part1
      const disableP5InHolaPart1 = () => {
        const holaPart1 = document.getElementById('hola-part1');
        if (holaPart1) {
          // Ocultar todos los canvas de p5 en hola-part1
          const canvases = holaPart1.querySelectorAll('canvas');
          canvases.forEach((canvas) => {
            canvas.style.display = 'none';
            canvas.style.visibility = 'hidden';
            canvas.style.opacity = '0';
          });

          // Desactivar instancias P5 si existen
          if (window._P5CursorInstances && typeof window._P5CursorInstances === 'object') {
            Object.keys(window._P5CursorInstances).forEach((key) => {
              const instance = window._P5CursorInstances?.[key];
              if (instance && instance.sectionId === 'hola-part1') {
                if (instance.setActive) {
                  instance.setActive(false);
                }
              }
            });
          }
        }
      };

      // Ejecutar inmediatamente y despu√©s de un delay
      disableP5InHolaPart1();
      setTimeout(disableP5InHolaPart1, 1000);
      setTimeout(disableP5InHolaPart1, 3000);
      const contentSections = document.querySelectorAll('.content-section');
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting && entry.intersectionRatio > 0.5) {
              const sectionId = entry.target.id;
              const baseSectionId = sectionId.split('-')[0];
              entry.target.classList.add('active');
              if (sectionId === 'hola-part2') {
                const transformTexts = entry.target.querySelectorAll('.scroll-transform-text');
                setTimeout(() => {
                  transformTexts.forEach((text) => {
                    text.classList.add('active');
                  });
                }, 300);
              }
              const navCard = document.querySelector(
                `.nav-item-container[data-section="${baseSectionId}"]`
              );
              if (navCard) {
                document.querySelectorAll('.nav-item-container').forEach((card) => {
                  card.classList.remove('active');
                });
                navCard.classList.add('active');
                const event = new CustomEvent('navCardStateChanged', {
                  detail: { sectionId: baseSectionId, isActive: true, currentSectionId: sectionId },
                });
                document.dispatchEvent(event);
              }
            } else {
              entry.target.classList.remove('active');
              if (entry.intersectionRatio <= 0.5) {
                const sectionId = entry.target.id;
                const baseSectionId = sectionId.split('-')[0];
                const navCard = document.querySelector(
                  `.nav-item-container[data-section="${baseSectionId}"]`
                );
                if (navCard) {
                  navCard.classList.remove('active');
                  const event = new CustomEvent('navCardStateChanged', {
                    detail: { sectionId: baseSectionId, isActive: false },
                  });
                  document.dispatchEvent(event);
                }
              }
            }
          });
        },
        { threshold: 0.5 }
      );
      contentSections.forEach((section) => {
        observer.observe(section);
      });

      // Ejecutar desactivaci√≥n de P5 una vez m√°s despu√©s de que todo est√© cargado
      setTimeout(() => {
        const holaPart1 = document.getElementById('hola-part1');
        if (holaPart1) {
          const canvases = holaPart1.querySelectorAll('canvas');
          canvases.forEach((canvas) => {
            canvas.remove(); // Remover completamente el canvas
          });
        }
      }, 5000);
    });
  </script>
