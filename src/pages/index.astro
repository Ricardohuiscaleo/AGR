  <!-- üîç Script de debug para clicks -->
  <script is:inline>
    console.log('üîç Click Debug Script cargado');

    document.addEventListener('DOMContentLoaded', () => {
      let clickCount = 0;

      // Debug de clicks
      document.addEventListener(
        'click',
        (e) => {
          clickCount++;
          const target = e.target;
          console.log(`üñ±Ô∏è Click #${clickCount}:`, {
            tag: target?.tagName || 'unknown',
            class: target?.className || '',
            id: target?.id || '',
            x: e.clientX,
            y: e.clientY,
            prevented: e.defaultPrevented,
          });
        },
        true
      );

      // Fix para inputs bloqueados
      setTimeout(() => {
        const inputs = document.querySelectorAll('input, textarea, button');
        inputs.forEach((input, index) => {
          input.style.pointerEvents = 'auto';
          input.style.position = 'relative';
          input.style.zIndex = '9999';

          // Fix espec√≠fico para focus
          if (input.tagName === 'INPUT' || input.tagName === 'TEXTAREA') {
            // Remover listeners existentes
            input.removeEventListener('click', input._focusHandler);

            // Crear nuevo handler
            input._focusHandler = (e) => {
              console.log('üéØ Click interceptado en:', input.id || input.tagName);
              e.preventDefault();
              e.stopPropagation();

              // Forzar focus inmediato
              input.focus();

              // Verificar si el focus funcion√≥
              setTimeout(() => {
                if (document.activeElement === input) {
                  console.log('‚úÖ Focus exitoso en:', input.id || input.tagName);
                } else {
                  console.log('‚ùå Focus fall√≥ en:', input.id || input.tagName);
                  // Intentar de nuevo
                  input.focus();
                }
              }, 50);
            };

            // Agregar el listener
            input.addEventListener('click', input._focusHandler, true);
            console.log('üîß Handler agregado a:', input.id || input.tagName);
          }
        });
        console.log('üîß Fix aplicado a', inputs.length, 'elementos');
      }, 1000);

      // Detectar elementos con z-index alto
      setTimeout(() => {
        const elements = document.querySelectorAll('*');
        const highZ = [];
        elements.forEach((el) => {
          const zIndex = parseInt(window.getComputedStyle(el).zIndex);
          if (zIndex > 1000) {
            highZ.push({
              tag: el.tagName,
              class: el.className,
              zIndex: zIndex,
            });
          }
        });
        if (highZ.length > 0) {
          console.log('üîù Elementos con z-index alto:', highZ);
        }
      }, 1500);

      // Debug espec√≠fico para inputs
      setTimeout(() => {
        const inputs = document.querySelectorAll('input, textarea');
