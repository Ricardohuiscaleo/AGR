---
// =====================================================================
// SECCI√ìN FAQ (PARTE 2) - LA EVOLUCI√ìN DEL FAQ
// =====================================================================

// Definimos las props que recibe
interface Props {
  section: any;
}
const { section } = Astro.props;
---

<div class="section-inner w-full p-0 m-0 relative overflow-hidden">
  <div class="w-full relative z-10">
    <!-- Container principal con estilo similar a ContactoPart2Content -->
    <div
      id="faq-part2-timeline"
      class="w-full relative z-10"
      style="height: 100%; position: relative; margin: 1rem;"
    >
      <div class="timeline-wrapper">
        <!-- T√≠tulo principal con estilo grande -->
        <h2
          class="text-4xl sm:text-5xl md:text-6xl lg:text-8xl xl:text-9xl font-bold mb-4 md:mb-6 leading-tight"
        >
          Preguntas frecuentes con
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-red-600 via-red-500 to-red-700"
          >
            FAQ inteligente
          </span>
        </h2>

        <div class="max-w-7xl">
          <p
            class="text-base sm:text-lg md:text-2xl lg:text-3xl xl:text-4xl text-gray-700 leading-relaxed"
          >
            De preguntas est√°ticas a
            <span
              class="animated-gradient-text"
              style="background-image: linear-gradient(45deg, #4d4d4d, #282727, #4c434b, #7e7777); -webkit-background-clip: text; background-clip: text; color: transparent; display: inline;"
            >
              conversaciones inteligentes
            </span>
            con IA para respuestas
            <span
              class="inline-block bg-gradient-to-r from-gray-400 via-gray-800 to-gray-500 bg-[length:200%_100%] text-transparent bg-clip-text font-semibold italic transform -rotate-1 animate-shimmer"
            >
              personalizadas en tiempo real
            </span>
          </p>
        </div>
      </div>

      <!-- Bot√≥n del chat destacado con ancho m√°ximo disponible -->
      <div
        class="bg-white/80 backdrop-blur-md rounded-xl p-4 sm:p-8 shadow-lg border border-red-100 w-[calc(100%-2rem)] mx-4 text-center mt-8"
      >
        <h3 class="text-xl sm:text-2xl font-semibold mb-2 sm:mb-4 text-gray-800">
          Asistente virtual
        </h3>
        <p class="text-sm sm:text-base text-gray-600 mb-4 sm:mb-6">Resuelve tus dudas</p>

        <!-- Eliminado el texto est√°tico fuera del bot√≥n en m√≥vil -->

        <button
          id="faq-chat-button"
          class="chat-toggle-button mx-auto mb-4 sm:mb-6"
          aria-label="Abrir chat"
          title="Abrir chat"
        >
          <div class="chat-icon-wrapper">
            <svg
              class="chat-icon-svg sm:chat-icon-svg-static"
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
            </svg>
          </div>
          <!-- Texto est√°tico en el bot√≥n para todas las pantallas -->
          <div class="chat-text-container">
            <span class="chat-dynamic-phrase">Haz una pregunta...</span>
          </div>
        </button>

        <!-- Caracter√≠sticas con emojis para m√≥vil y texto para desktop -->
        <div
          class="flex justify-center items-center gap-x-4 sm:gap-x-6 mt-2 sm:mt-4 text-xs text-gray-500"
        >
          <!-- Versi√≥n m√≥vil con emojis -->
          <div class="sm:hidden flex justify-center gap-x-8">
            <div class="text-center text-lg">‚ö°</div>
            <div class="text-center text-lg">üí¨</div>
            <div class="text-center text-lg">üß†</div>
          </div>

          <!-- Versi√≥n desktop con texto -->
          <div class="hidden sm:flex flex-wrap justify-center gap-x-6 gap-y-2">
            <div class="flex items-center">
              <div class="w-2 h-2 bg-red-400 rounded-full mr-2"></div>
              <span>Respuestas instant√°neas 24/7</span>
            </div>
            <div class="flex items-center">
              <div class="w-2 h-2 bg-red-400 rounded-full mr-2"></div>
              <span>Conversaciones naturales</span>
            </div>
            <div class="flex items-center">
              <div class="w-2 h-2 bg-red-400 rounded-full mr-2"></div>
              <span>Aprendizaje continuo</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Espacio adicional al final -->
    <div class="mt-8 md:mt-12"></div>
  </div>
</div>

<style>
  /* Animaciones personalizadas para esta secci√≥n */
  .section-inner {
    background: linear-gradient(135deg, #ffffff);
  }

  /* Animaci√≥n shimmer para efectos de texto */
  @keyframes shimmer {
    0% {
      background-position: -200% 0;
    }
    100% {
      background-position: 200% 0;
    }
  }

  .animate-shimmer {
    animation: shimmer 3s ease-in-out infinite;
  }

  /* Estilo m√≠nimo para wrapper */
  .timeline-wrapper {
    margin-bottom: 2rem;
  }

  .timeline-wrapper h2 {
    margin-bottom: 1.5rem;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Animaci√≥n de aparici√≥n para elementos */
  .section-inner > * {
    animation: fadeInUp 0.6s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<!-- ESTILOS DEL BOT√ìN DEL CHAT -->
<style>
  .chat-toggle-button {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    padding: 12px 20px;
    width: 240px; /* Ancho fijo para evitar saltos */
    border: none;
    border-radius: 50px;
    cursor: pointer;
    font-size: 14px; /* Texto m√°s peque√±o en m√≥vil */
    font-weight: 600;
    color: white;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
    background: linear-gradient(110deg, #dc2626 0%, #ef4444 50%, #dc2626 100%);
    background-size: 200% 100%;
    box-shadow:
      0 0 20px rgba(220, 38, 38, 0.4),
      0 4px 10px rgba(0, 0, 0, 0.2);
    transition: background-position 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    user-select: none;
  }

  @media (min-width: 640px) {
    .chat-toggle-button {
      padding: 14px 28px;
      width: 280px; /* Ancho fijo m√°s grande para desktop */
      font-size: 16px; /* Texto m√°s grande en desktop */
    }
  }
  .chat-toggle-button:hover {
    background-position: right center;
    box-shadow:
      0 0 30px rgba(239, 68, 68, 0.6),
      0 8px 15px rgba(0, 0, 0, 0.3);
  }
  .chat-toggle-button:active {
    opacity: 0.9;
  }
  .chat-icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .chat-icon-svg {
    transition: transform 0.3s ease;
    animation: pulse-mobile 2s infinite ease-in-out;
  }

  @keyframes pulse-mobile {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2) rotate(-10deg);
    }
    100% {
      transform: scale(1);
    }
  }

  .chat-icon-svg-static {
    animation: none;
  }

  .chat-toggle-button:hover .chat-icon-svg {
    transform: rotate(-15deg) scale(1.1);
    animation: none;
  }
  .chat-text-container {
    position: relative;
    height: 1.2em;
  }
  .chat-dynamic-phrase {
    display: inline-block;
    white-space: nowrap;
    opacity: 1;
  }
</style>

<!-- SCRIPT DEL BOT√ìN DEL CHAT -->
<script>
  declare global {
    interface DocumentEventMap {
      chatStatusUpdate: CustomEvent<{ phrase: string }>;
      openChatModal: CustomEvent;
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    const chatToggleButton = document.getElementById('faq-chat-button');

    if (chatToggleButton) {
      chatToggleButton.addEventListener('click', () => {
        document.dispatchEvent(new CustomEvent('openChatModal', {
          detail: { buttonId: 'faq-chat-button' }
        }));
      });
    }
  });
</script>
