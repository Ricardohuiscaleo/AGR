<style>
  .scroller {
    max-width: 100%;
  }

  .scroller__inner {
    padding-block: 1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  /* Carrusel con scroll manual */
  .scrollable-carousel {
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: thin;
    scrollbar-color: #00ff41 transparent;
    -webkit-mask: linear-gradient(90deg, transparent, white 10%, white 90%, transparent);
    mask: linear-gradient(90deg, transparent, white 10%, white 90%, transparent);
    cursor: grab;
  }

  .scrollable-carousel:active {
    cursor: grabbing;
  }

  .scrollable-carousel::-webkit-scrollbar {
    height: 6px;
  }

  .scrollable-carousel::-webkit-scrollbar-track {
    background: rgba(0, 255, 65, 0.1);
    border-radius: 3px;
  }

  .scrollable-carousel::-webkit-scrollbar-thumb {
    background: #00ff41;
    border-radius: 3px;
  }

  .scrollable-carousel::-webkit-scrollbar-thumb:hover {
    background: #5fff78;
  }

  /* Carrusel continuo infinito */
  .infinite-carousel {
    overflow: hidden;
    width: 100%;
    position: relative;
    -webkit-mask: linear-gradient(90deg, transparent, white 5%, white 95%, transparent);
    mask: linear-gradient(90deg, transparent, white 5%, white 95%, transparent);
  }

  /* Versi칩n scrolleable */
  .infinite-carousel.scrollable {
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: thin;
    scrollbar-color: #00ff41 transparent;
    cursor: grab;
  }

  .infinite-carousel.scrollable:active {
    cursor: grabbing;
  }

  .infinite-carousel.scrollable::-webkit-scrollbar {
    height: 4px;
  }

  .infinite-carousel.scrollable::-webkit-scrollbar-track {
    background: rgba(0, 255, 65, 0.1);
  }

  .infinite-carousel.scrollable::-webkit-scrollbar-thumb {
    background: #00ff41;
    border-radius: 2px;
  }

  .carousel-track {
    display: flex;
    gap: 1rem;
    width: max-content;
    animation: infiniteScroll 60s linear infinite;
  }

  .infinite-carousel[data-direction='left'] .carousel-track {
    animation-direction: reverse;
  }

  @keyframes infiniteScroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% / 3));
    }
  }

  /* Pausar en hover y durante scroll */
  .infinite-carousel:hover .carousel-track,
  .infinite-carousel.user-scrolling .carousel-track {
    animation-play-state: paused;
  }

  .scroller[data-direction='right'] {
    --_animation-direction: reverse;
  }
  .scroller[data-direction='left'] {
    --_animation-direction: forwards;
  }
  .scroller[data-speed='slow'] {
    --_animation-duration: 120s; /* M치s lento: 2 minutos por ciclo */
  }

  @keyframes scroll {
    to {
      transform: translate(calc(-50% - 0.5rem));
    }
