<script>
  document.addEventListener('DOMContentLoaded', () => {
    const scrollableCarousels = document.querySelectorAll('.infinite-carousel.scrollable');
    
    scrollableCarousels.forEach((carousel) => {
      let scrollTimeout;
      
      // Pausar animaci칩n durante scroll
      carousel.addEventListener('scroll', () => {
        carousel.classList.add('user-scrolling');
        clearTimeout(scrollTimeout);
        
        scrollTimeout = setTimeout(() => {
          carousel.classList.remove('user-scrolling');
        }, 2000);
      });
      
      // Pausar en touch/mouse
      carousel.addEventListener('mousedown', () => {
        carousel.classList.add('user-scrolling');
      });
      
      carousel.addEventListener('touchstart', () => {
        carousel.classList.add('user-scrolling');
      });
    });
  });
</script>
